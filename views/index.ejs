<!DOCTYPE html>

<html>
 <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" , initial-scale="1" />
    <title>Young Hearts Boarding High School</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link href="/stylesheets/jquery.bxslider.css" rel="stylesheet" />

    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="/javascripts/jquery.bxslider.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.bxslider').bxSlider({
                auto: true,
                responsive: false
            });
        });
    </script>
</head>
<body>
        <% if (sessionValue == "admin") { %>
        <input type="button" onClick= "location.href = '/logout';" value="Logout" class="btn btn-default" style="float:right; text-align:right; font-size:8px;">
        <% } else { %>
        <input type="button" onClick= "location.href = '/login';" value="Admin" class="btn btn-default" style="float:right; text-align:right; font-size:8px;">
        <% } %>

        <header>
        <% include ./header %>
    </header>

    <ul class="bxslider">
        <li><img src="/images/front.jpg" width="700px" height="500px" style="margin-left:auto; margin-right:auto; display:block;"/></li>
        <li><img src="/images/front.jpg" width="700px" height="500px" style="margin-left:auto; margin-right:auto; display:block;"/></li>
    </ul>
    <br>

    <p style="font-size : 30px; text-align : center;"><i>'LIFT UP YOUR HEARTS'</i></p>
    <br>

   
    <div class="container" >
        <div class="row" style="margin : 0 auto;">
            <div class="col-md-6">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th width="15%" style="text-align : center;">No.</th>
                    <th width="45%">Title</th>
                    <th width="10%" style="text-align : center;">Author</th>
                    <th width="30%" style="text-align : center;">Date</th>
                  </tr>
                </thead>
                <tbody>
                 <% for(var i=0; i< result.length;i++){ 
                        var next = result.length - i - 1;
                       if(i==9) break; %>
                    <tr>
                      <td style="text-align : center;"><%= result.length - i %></td>
                      <td id="title">
                        <a href="/nav/notice/noticeBoard/<%= result[next].seq %>" >
                        <% if(result[next].title.length > 20){ %>
                        <%=  result[next].title.slice(0,25); %>...&nbsp;
                        <% }else { %> 
                            <%= result[next].title %>
                            <% } %></a>
                      </td>
                      <td>Admin</td>
                      <td style="text-align : center;"><%= result[next].date %></td>
                    </tr>
                  <% } %>
                </tbody>
              </table> 
            </div>
            <div class="col-md-16">
            <div class="container" id="tourpackages-carousel">
                <div class="row">
                 <% for (var i=imgList.length; i > 0; i--) {
                     if ( i == 4 ) break; %>
                  <div class="col-xs-12 col-sm-3 col-md-3">
                  <div class="thumbnail">
                   <!-- DB에 seq 컬럼 추가해야함 -->
                    <a href="/nav/etcBoard/<%= imgList[i-1].seq %>"><img src="<%= imgList[i-1].imgUrl %>" alt=""></a>
                  </div>
                  </div>
                <% } %>
                </div>    
            </div>
           </div></div>
        </div>
        <hr />
    </div>

    
     <footer>
        <% include ./footer %>
    </footer> 

</body>
</html>